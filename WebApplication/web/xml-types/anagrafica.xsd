        <xsd:sequence>
            <xsd:element name="utente" type="tipo_utente" maxOccurs="unbounded" /> 
        </xsd:sequence> 
    </xsd:complexType>
    
    <xsd:complexType name="tipo_utente">
         <xsd:sequence>
            <xsd:element name="name" type="xs:string"/>
